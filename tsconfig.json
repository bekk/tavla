{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "lib": ["es2017", "dom", "dom.iterable", "es2019"],
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./types", "node_modules/@types"],
        "strict": true,
        "downlevelIteration": true
    },
    "include": ["types", "./src/**/*"],
    "exclude": ["node_modules"]
}
